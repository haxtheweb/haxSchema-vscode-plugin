      "  \"property\": \"${1:propertyName}\",",
      "  \"title\": \"${2:Field Label}\",",
      "  \"description\": \"${3:Field description}\",",
      "  \"inputMethod\": \"${4|haxupload,fileupload|}\",",
      "  \"noVoiceRecord\": ${5|true,false|},",
      "  \"validationType\": \"url\"",
