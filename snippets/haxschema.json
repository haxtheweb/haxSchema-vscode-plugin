  },
  "Settings Field - URL": {
    "prefix": "hax-field-url",
    "body": [
      "{",
      "  \"property\": \"${1:propertyName}\",",
      "  \"title\": \"${2:Field Label}\",",
      "  \"description\": \"${3:Field description}\",",
      "  \"inputMethod\": \"url\",",
      "  \"validationType\": \"url\"",
      "}"
    ],
    "description": "HAX settings URL field"
  },
  "Settings Field - Color Picker": {
    "prefix": "hax-field-color",
