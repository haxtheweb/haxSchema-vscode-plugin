    "prefix": "hax-demo",
    "body": [
      "{",
      "  \"tag\": \"${1:my-element}\",",
      "  \"properties\": {",
      "    \"${2:property}\": \"${3:value}\"",
      "  },",
      "  \"content\": \"${4:<p>Demo content</p>}\"",
      "}"
    ],
