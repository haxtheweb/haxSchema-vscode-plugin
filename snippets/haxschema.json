  },
  "Save Options": {
    "prefix": "hax-save-options",
    "body": [
      "\"saveOptions\": {",
      "  \"wipeSlot\": ${1|false,true|},",
      "  \"unsetAttributes\": [${2:\"attributeName\"}]",
      "}"
    ],
    "description": "HAX save options configuration"
  }
