  },
  "Design System Configuration": {
    "prefix": "hax-design-system",
    "body": [
      "\"designSystem\": {",
      "  \"accent\": ${1|true,false|},",
      "  \"primary\": ${2|false,true|},",
      "  \"card\": ${3|true,false|},",
      "  \"text\": ${4|false,true|},",
      "  \"designTreatment\": ${5|false,true|}",
      "}"
    ],
